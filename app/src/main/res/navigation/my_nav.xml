<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.first_app_version.SignInFragment"
        android:label="sign_in_layout"
        tools:layout="@layout/sign_in_layout" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_homePageFragment"
            app:destination="@id/homePageFragment" />
    </fragment>
    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.first_app_version.HomePageFragment"
        android:label="home_page_layout"
        tools:layout="@layout/home_page_layout" >
        <action
            android:id="@+id/action_homePageFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.first_app_version.SignUpFragment"
        android:label="sign_up_layout"
        tools:layout="@layout/sign_up_layout" />
</navigation>